{
  "$id": "https://raw.githubusercontent.com/floherent/jsonschemas/main/wasm-service.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WASM Service Configuration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "description": "Name of the service",
      "type": "string"
    },
    "description": {
      "description": "Description of the service",
      "type": "string"
    },
    "service": {
      "description": "API Service configuration",
      "type": "object",
      "properties": {
        "port": {
          "description": "Port number of the service",
          "type": "integer",
          "default": 8080
        },
        "contextPath": {
          "description": "Context path of the service; API endpoints will be prefixed with this path",
          "type": "string",
          "format": "uri",
          "default": "/"
        },
        "uploadPath": {
          "description": "Directory path where the uploaded files will be stored",
          "default": "uploads",
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "string",
              "pattern": "^\\w+$"
            }
          ]
        },
        "bodyLimit": {
          "description": "Body parser size limit",
          "$comment": "In bytes, can be a string (100kb) or an integer (102400)",
          "examples": ["100kb", 102400],
          "default": "50mb",
          "oneOf": [{ "type": "string" }, { "type": "integer", "minimum": 1 }]
        },
        "connectivity": {
          "description": "Spark connectivity details when internet access is enabled",
          "type": "object",
          "required": ["enabled", "baseUrl"],
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "description": "Enable this when Spark connectivity is required to fetch the WASM bundle",
              "type": "boolean",
              "default": false
            },
            "baseUrl": {
              "description": "Coherent Spark's base URL (e.g., https://excel.{region}.coherent.global/{tenant})",
              "type": "string",
              "format": "uri",
              "examples": [
                "https://excel.uat.us.coherent.global/my-tenant",
                "https://excel.eu.coherent.global/my-tenant"
              ]
            },
            "token": {
              "description": "Short-lived access token extracted from Spark UI",
              "type": "object",
              "properties": {
                "header": { "type": "string", "default": "Authorization" },
                "value": { "type": "string", "pattern": "^Bearer\\s+[A-Za-z0-9-._~+/]+=*$" }
              }
            },
            "apiKey": {
              "description": "API key generated by Admin with limited scopes",
              "type": "object",
              "properties": {
                "header": { "type": "string", "default": "x-synthetic-key" },
                "value": { "type": "string", "format": "uuid" }
              }
            },
            "oauth2": {
              "description": "Client credentials for OAuth2 authentication",
              "type": "object",
              "properties": {
                "clientId": { "type": "string" },
                "clientSecret": { "type": "string" }
              }
            }
          },
          "oneOf": [
            { "required": ["token"], "not": { "required": ["apiKey", "oauth2"] } },
            { "required": ["apiKey"], "not": { "required": ["token", "oauth2"] } },
            { "required": ["oauth2"], "not": { "required": ["token", "apiKey"] } }
          ]
        }
      },
      "additionalProperties": false
    },
    "performance": {
      "description": "Performance configuration",
      "type": "object",
      "properties": {
        "history": {
          "description": "API Execution History configuration",
          "type": "object",
          "additionalProperties": false,
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "description": "Save the API execution results to the local CSVfile system when enabled",
              "type": "boolean",
              "default": false
            }
          }
        },
        "spark": {
          "description": "Spark runner configuration",
          "type": "object",
          "properties": {
            "cacheSize": {
              "description": "Number of Spark runners to cache",
              "type": "integer",
              "minimum": 1,
              "maximum": 16,
              "default": 8
            },
            "threads": {
              "description": "Number of threads to use per Spark runner",
              "type": "integer",
              "minimum": 1,
              "maximum": 8,
              "default": 1
            },
            "replicas": {
              "description": "Number of Spark runner replicas",
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 1
            }
          }
        },
        "health": {
          "description": "Health check configuration",
          "type": "object",
          "properties": {
            "appDir": {
              "description": "Application directory for health checks",
              "type": "string",
              "format": "uri",
              "default": "."
            },
            "indicators": {
              "description": "Health check indicators",
              "type": "object",
              "properties": {
                "disk": {
                  "description": "Threshold in percentage for disk usage",
                  "type": "number",
                  "exclusiveMinimum": 0.0,
                  "exclusiveMaximum": 1.0,
                  "default": 0.75
                },
                "wasm": {
                  "description": "Threshold in MB for WASM file storage",
                  "type": "integer",
                  "minimum": 1,
                  "default": 512
                },
                "memory": {
                  "description": "Threshold in MB for heap and RSS memory usage",
                  "type": "integer",
                  "minimum": 1,
                  "default": 1024
                }
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
